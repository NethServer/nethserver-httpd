use strict;
use warnings;
use esmith::ConfigDB;
use JSON;

require '/usr/libexec/nethserver/api/lib/helper_functions.pl';

my $input = readInput();
my $cmd = $input->{'action'};

my $ret = {};

open(DATE, "timedatectl list-timezones|");
my @timezones = <DATE>;
close(DATE);
chomp @timezones;

if ($cmd eq 'configuration') {

    my $db = esmith::ConfigDB->open_ro();
    $ret->{'configuration'}{'MaxExecutionTime'} = $db->get_prop('php', 'MaxExecutionTime') || '0';
    $ret->{'configuration'}{'MemoryLimit'} = $db->get_prop('php', 'MemoryLimit') || '128';
    $ret->{'configuration'}{'PostMaxSize'} = $db->get_prop('php', 'PostMaxSize')|| '8';
    $ret->{'configuration'}{'UploadMaxFilesize'} = $db->get_prop('php', 'UploadMaxFilesize')|| '4';
    $ret->{'configuration'}{'DateTimezone'} = $db->get_prop('php', 'DateTimezone')|| 'UTC';
    $ret->{'configuration'}{'TimeZones'} = \@timezones;
    $ret->{'configuration'}{'ShortOpenTag'} = $db->get_prop('php', 'ShortOpenTag')|| 'Off';

} else {
    error();
}

print encode_json($ret);
