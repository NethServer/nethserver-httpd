{
    #
    # set to disabled the new prop AllowEncodeSlashes if not exist for VhostReverse records
    #
    
    use esmith::ConfigDB;

    my $db = esmith::ConfigDB->open('proxypass') || return '';

    foreach ($db->get_all_by_prop('type', 'VhostReverse')) {
        my $AllowEncodeSlashes = $_->prop('AllowEncodeSlashes') || '';
        if ($AllowEncodeSlashes eq '') {
            $_->set_prop('AllowEncodeSlashes', 'disabled');
        }
    }

    '';
}
