{
 
    #
    # 10httpd
    #

    my $httpStatus = $ibay{HttpStatus} || '';
    my $WebDav     =  $ibay{HttpWebDav} || 'disabled';
    my $PwdStatus  =  $ibay{HttpPasswordStatus} || 'disabled';
    
    if (($PwdStatus eq 'UserGroup') && ($WebDav eq 'enabled')) {
        #Add full permissions for webdav
        push @systemAclsModify, 'u:apache:rwX', 'd:u:apache:rwX';
    } elsif ($httpStatus eq 'enabled') {
        # Add ACL for apache user
        push @systemAclsModify, 'u:apache:rX', 'd:u:apache:rX';
    } else {
        # Remove apache ACLs:
        push @systemAclsRemove, 'u:apache', 'd:u:apache';
    }

    '';
}
